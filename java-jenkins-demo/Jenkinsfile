pipeline {
    agent any

    environment {
        APP_DIR  = 'java-jenkins-demo'
        SERVICE  = 'java-demo'
        DEPLOY_PATH = '/opt/java-demo/app.jar'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-ssh',
                    url: 'git@github.com:Siddharth-2110/java-devops-project.git'
            }
        }

        stage('Build') {
            steps {
                dir("${APP_DIR}") {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Resolve Artifact') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        env.JAR_NAME = sh(
                            script: "ls target/*.jar | grep -v original | head -n 1 | xargs basename",
                            returnStdout: true
                        ).trim()

                        echo "Resolved artifact: ${env.JAR_NAME}"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                echo "Deploying new version..."

                sudo cp java-jenkins-demo/target/${JAR_NAME} ${DEPLOY_PATH}
                sudo chown jenkins:jenkins ${DEPLOY_PATH}

                sudo systemctl restart ${SERVICE}
                '''
            }
        }

        stage('Verify') {
            steps {
                sh '''
                sleep 5
                sudo systemctl is-active --quiet ${SERVICE}
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Deployment successful. Application is running."
        }
        failure {
            echo "❌ Deployment failed. Check service logs."
        }
    }
}

