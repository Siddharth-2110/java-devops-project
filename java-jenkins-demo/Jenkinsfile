pipeline {
    agent any

    environment {
        APP_DIR   = 'java-jenkins-demo'
        APP_PORT  = '8081'
        JAVA_OPTS = '-Xms128m -Xmx256m'
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-ssh',
                    url: 'git@github.com:Siddharth-2110/java-devops-project.git'
            }
        }

        stage('Build') {
            steps {
                dir("${APP_DIR}") {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Resolve Artifact') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        env.JAR_NAME = sh(
                            script: "ls target/*.jar | grep -v original | head -n 1 | xargs -n 1 basename",
                            returnStdout: true
                        ).trim()

                        echo "Resolved JAR: ${env.JAR_NAME}"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                dir("${APP_DIR}") {
                    sh '''
                    echo "Stopping existing app (if any)..."
                    pkill -f "${JAR_NAME}" || true

                    echo "Starting application in background..."
                    nohup setsid java $JAVA_OPTS -jar target/${JAR_NAME} \
                      --server.port=${APP_PORT} \
                      > app.log 2>&1 < /dev/null &

                    sleep 2
                    echo "Deployment command completed."
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "✅ Build finished. App should be running on port ${APP_PORT}"
        }
        failure {
            echo "❌ Build failed. Check Jenkins console & app.log"
        }
    }
}

