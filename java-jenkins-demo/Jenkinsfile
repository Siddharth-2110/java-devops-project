pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Siddharth-2110/java-devops-project.git'
            }
        }

        stage('Build') {
            steps {
                dir('java-jenkins-demo') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('java-jenkins-demo') {
                    sh '''
                    pkill -f demo-1.0.jar || true
                    nohup java -jar target/demo-1.0.jar > app.log 2>&1 &
                    '''
                }
            }
        }
    }
}

