pipeline {
    agent any

    environment {
        APP_DIR  = 'java-jenkins-demo'
        APP_PORT = '8081'
    }

    stages {

        stage('Build') {
            steps {
                dir("${APP_DIR}") {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Resolve Artifact') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        env.JAR_NAME = sh(
                            script: "ls target/*.jar | grep -v original | head -n 1 | xargs basename",
                            returnStdout: true
                        ).trim()

                        echo "Using JAR: ${env.JAR_NAME}"
                    }
                }
            }
        }

        stage('Deploy (DEBUG MODE)') {
            steps {
                dir("${APP_DIR}") {
                    sh '''
                    set +e

                    echo "========== DEBUG INFO =========="
                    echo "User:"
                    whoami

                    echo "Working directory:"
                    pwd

                    echo "Java version:"
                    java -version

                    echo "JAR to run:"
                    echo "${JAR_NAME}"

                    echo "Stopping old app if any..."
                    pkill -f "${JAR_NAME}" || true

                    echo "Starting app in FOREGROUND (debug)..."
                    java -jar target/${JAR_NAME} --server.port=${APP_PORT}

                    echo "========== APP EXITED =========="
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "Build finished"
        }
        failure {
            echo "Build failed"
        }
    }
}

