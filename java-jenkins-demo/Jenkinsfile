pipeline {
    agent any

    environment {
        APP_PORT = '8081'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-ssh',
                    url: 'git@github.com:Siddharth-2110/java-devops-project.git'
            }
        }

        stage('Build') {
            steps {
                dir('java-jenkins-demo') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('java-jenkins-demo') {
                    sh '''
                    JAR_FILE=$(ls target/*.jar | head -n 1)
                    echo "Deploying $JAR_FILE"

                    pkill -f "$JAR_FILE" || true

                    nohup java -jar "$JAR_FILE" \
                      --server.port=$APP_PORT \
                      > app.log 2>&1 &
                    '''
                }
            }
        }
    }
}

