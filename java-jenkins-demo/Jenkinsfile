pipeline {
    agent any

    environment {
        APP_DIR  = 'java-jenkins-demo'
        APP_PORT = '8081'
    }

    stages {

        stage('Build') {
            steps {
                dir("${APP_DIR}") {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Resolve Artifact') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        env.JAR_NAME = sh(
                            script: "ls target/*.jar | grep -v original | head -n 1 | xargs basename",
                            returnStdout: true
                        ).trim()

                        echo "Deploying JAR: ${env.JAR_NAME}"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                dir("${APP_DIR}") {
                    sh """
                    echo "Stopping old app if running..."
                    pkill -f "${env.JAR_NAME}" || true

                    echo "Starting new app..."
                    nohup java -jar target/${env.JAR_NAME} \
                      --server.port=${APP_PORT} \
                      > app.log 2>&1 &
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ Application deployed successfully on port ${APP_PORT}"
        }
        failure {
            echo "❌ Deployment failed. Check logs."
        }
    }
}

